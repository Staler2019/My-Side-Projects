{
  "files.defaultLanguage": "cpp",
  "editor.formatOnType": true,
  "editor.snippetSuggestions": "top",
  "code-runner.runInTerminal": true,
  "code-runner.executorMap": {
    "c": "cd $dir && clang $fileName -o $fileNameWithoutExt.exe -Wall -g -Og -static-libgcc -fcolor-diagnostics -std=c11 && $dir$fileNameWithoutExt",
    "cpp": "cd $dir && clang++ $fileName -o $fileNameWithoutExt.exe -Wall -g -Og -static-libgcc -fcolor-diagnostics -std=c++17 && $dir$fileNameWithoutExt"
  },
  "code-runner.saveFileBeforeRun": true,
  "code-runner.preserveFocus": true,
  "code-runner.clearPreviousOutput": false,
  "C_Cpp.clang_format_sortIncludes": true,
  "C_Cpp.intelliSenseEngine": "Default",
  "C_Cpp.errorSquiggles": "Disabled",
  "C_Cpp.autocomplete": "Disabled",
  "clang.executable": "C:/LLVM/bin/clang.exe",
  "clang.cxxflags": [
    "-std=c++17",
    "-IC:/TDM-GCC-64/include",
    "-IC:/TDM-GCC-64/lib/gcc/x86_64-w64-mingw32/9.2.0/include",
    "-IC:/TDM-GCC-64/lib/gcc/x86_64-w64-mingw32/9.2.0/include/c++",
    "-I${workspaceFolder}/include",
    "-I${cwd}"
  ],
  "clang.cflags": [
    "-std=c11",
    "-IC:/TDM-GCC-64/include",
    "-IC:/TDM-GCC-64/lib/gcc/x86_64-w64-mingw32/9.2.0/include",
    "-I${workspaceFolder}/include",
    "-I${cwd}"
  ],
  "clang.completion.enable": true
}